<Page x:Class="BusNetworkSystem.Pages.PersonalCabinet.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BusNetworkSystem"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Личный кабинет"
      Background="#211F22">

    <Page.Resources>
        <!-- Стили для текста -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Стили для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#D74106"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="#211F22"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стили для заголовков -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D74106"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10 20 10 10"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="*"/>
            <!-- Основной контент -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#211F22" 
                Height="50" 
                VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Кнопка "Назад" -->
                <Button Content="←" 
                        FontSize="20" 
                        Height="30" 
                        Width="40" 
                        Margin="10" 
                        VerticalAlignment="Center" 
                        Click="GoBackButton_Click" 
                        Foreground="#DCDCDC" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Style="{StaticResource MenuButton}"/>
                <!-- Заголовок страницы -->
                <TextBlock Text="Личный кабинет" 
                           Foreground="#DCDCDC" 
                           FontSize="20" 
                           Margin="0, 5"
                           Style="{StaticResource HeaderText}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <TabControl Grid.Row="1" 
                    Background="#211F22" 
                    Foreground="#DCDCDC" 
                    Margin="20">
            <!-- Вкладка "Профиль" -->
            <TabItem Width="200"
                     Height="35"
                     Header="Профиль" 
                     Style="{StaticResource TabItemStyle}">
                <Border Background="#211F22" 
                        CornerRadius="10" 
                        Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid VerticalAlignment="Center" 
                              HorizontalAlignment="Left" 
                              Margin="100"
                              Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- Имя пользователя -->
                                <RowDefinition Height="Auto"/>
                                <!-- Электронная почта -->
                                <RowDefinition Height="Auto"/>
                                <!-- Номер телефона-->
                                <RowDefinition Height="Auto"/>
                                <!-- Пароль -->
                                <RowDefinition Height="Auto"/>
                                <!-- Кнопка "Изменить пароль" -->
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- Текст -->
                                <ColumnDefinition Width="10"/>
                                <!-- Отступ -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Кнопка "Изменить" -->
                            </Grid.ColumnDefinitions>

                            <!-- Имя пользователя -->
                            <TextBlock Text="Имя пользователя: Адам Арабов" 
                                   Foreground="#DCDCDC" 
                                   FontSize="16"
                                   Grid.Row="0" Grid.Column="0"/>
                            <Button Content="Изменить" 
                                Foreground="#DCDCDC" 
                                Background="Transparent" 
                                BorderThickness="0"
                                FontSize="14"
                                Cursor="Hand"
                                Grid.Row="0" Grid.Column="2"
                                Style="{StaticResource RegularButton}"/>

                            <!-- Электронная почта -->
                            <TextBlock Text="Электронная почта: examplemail@example.com" 
                                   Foreground="#DCDCDC" 
                                   FontSize="16"
                                   Grid.Row="1" Grid.Column="0"/>
                            <Button Content="Изменить" 
                                Foreground="#DCDCDC" 
                                Background="Transparent" 
                                BorderThickness="0"
                                FontSize="14"
                                Cursor="Hand"
                                Grid.Row="1"
                                Grid.Column="2"
                                Style="{StaticResource RegularButton}"/>

                            <!-- Номер телефона -->
                            <TextBlock Text="Номер телефона: number_placeholder"
                                   Foreground="#DCDCDC"
                                   FontSize="16"
                                   Grid.Row="2" Grid.Column="0"/>
                            <Button Content="Изменить"
                                Foreground="#DCDCDC"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="14"
                                Cursor="Hand"
                                Grid.Row="2"
                                Grid.Column="2"
                                Style="{StaticResource RegularButton}"/>
                            <!-- Пароль -->
                            <TextBlock Text="Пароль:" 
                                   Foreground="#DCDCDC" 
                                   FontSize="16"
                                   Grid.Row="3" Grid.Column="0"/>
                            <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <PasswordBox x:Name="PasswordBox" 
                                         Password="pass_holder" 
                                         Foreground="#DCDCDC" 
                                         Background="Transparent" 
                                         BorderThickness="0"
                                         FontSize="16"
                                         VerticalAlignment="Center"
                                         Visibility="Visible"/>
                                <TextBox x:Name="PasswordTextBox" 
                                      Text="pass_holder" 
                                      Foreground="#DCDCDC" 
                                      Background="Transparent" 
                                      BorderThickness="0"
                                      FontSize="16"
                                      VerticalAlignment="Center"
                                      Visibility="Collapsed"/>
                                <Button x:Name="TogglePasswordButton" 
                                    Content="👁" 
                                    Foreground="#DCDCDC" 
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    FontSize="14"
                                    Cursor="Hand"
                                    Grid.Column="1"
                                    Click="TogglePasswordButton_Click"
                                    Style="{StaticResource RegularButton}"/>
                            </Grid>

                            <!-- Кнопка "Изменить пароль" -->
                            <Button Content="Изменить пароль" 
                                Width="150" 
                                Margin="0, 20"
                                Foreground="#DCDCDC" 
                                Background="Transparent" 
                                BorderThickness="0"
                                FontSize="14"
                                Cursor="Hand"
                                Grid.Row="4"
                                Grid.Column="0" 
                                Grid.ColumnSpan="3"
                                Style="{StaticResource RegularButton}"/>
                        </Grid>
                        <Grid VerticalAlignment="Center" 
                              HorizontalAlignment="Right"
                              Grid.Column="1">
                            <StackPanel VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        Margin="20">
                                <TextBlock Text="Баланс:"
                                           FontSize="35"
                                           Foreground="#DCDCDC"
                                           Style="{StaticResource HeaderText}"/>
                                <TextBlock x:Name="balanceShow"
                                           Text="balance_placeholder"/>
                                <local:RotatingIconButton Width="300"
                                                          Height="50"
                                                          Background="#211F22"
                                                          Margin="0, 10, 0, 0"
                                                          Click="RotatingIconButton_Click"
                                                          Effect="{StaticResource DropShadowEffect}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>
            <!-- Вкладка "Заказы" -->
            <TabItem Header="Купленные билеты"
                     Width="200"
                     Height="35"
                     Style="{StaticResource TabItemStyle}">
                <Border Background="#211F22" 
                        CornerRadius="10" 
                        Padding="10">
                    <DataGrid AutoGenerateColumns="False" 
                              HeadersVisibility="Column" 
                              IsReadOnly="True" 
                              Background="#211F22" 
                              Foreground="#211F22"
                              RowBackground="#211F22"
                              AlternatingRowBackground="#2E2C2F"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Номер заказа" 
                                                Binding="{Binding OrderId}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Дата" 
                                                Binding="{Binding Date}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Статус" 
                                                Binding="{Binding Status}" 
                                                Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Page>