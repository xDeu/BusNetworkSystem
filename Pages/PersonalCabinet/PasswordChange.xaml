<Window x:Class="BusNetworkSystem.Pages.PersonalCabinet.PasswordChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusNetworkSystem.Pages.PersonalCabinet"
        mc:Ignorable="d"
        Title="Замена пароля"
        Padding="10" 
        Height="250" 
        Width="450"
        Background="#211F22"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="10" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Замена пароля"
                       FontSize="25"
                       Grid.Row="0"
                       Margin="20, 10, 0, 0"
                       Foreground="#DCDCDC"
                       Style="{StaticResource HeaderText}"/>
            <Button Margin="140, 0, 0, 0"
                    Content="X" HorizontalContentAlignment="Left"
                    Click="Button_Click"/>
        </StackPanel>
        
        <Border Margin="10" 
                Grid.Row="1"
                CornerRadius="10"
                Background="#211F22"
                Effect="{StaticResource DropShadowEffect}">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Старый пароль"
                           Foreground="#DCDCDC"
                           Grid.Column="0"
                           Grid.Row="0"
                           Height="25"
                           Padding="5"/>
                <PasswordBox x:Name="OldPassBox"
                             Grid.Column="1"
                             Grid.Row="0"
                             Height="25"
                             Margin="5"
                             PreviewMouseDown="PassB_PreviewMouseDown"
                             Style="{StaticResource NewRoundedPasswordBoxStyle}"/>
                <TextBlock Text="Новый пароль"
                           Foreground="#DCDCDC"
                           Grid.Column="0"
                           Grid.Row="1"
                           Height="25"
                           Padding="5"/>
                <PasswordBox x:Name="NewPassBox"
                             Grid.Column="1"
                             Grid.Row="1"
                             Height="25"
                             Margin="5"
                             PreviewMouseDown="PassB_PreviewMouseDown"
                             Style="{StaticResource NewRoundedPasswordBoxStyle}"/>
                <TextBlock Text="Повторите пароль"
                           Foreground="#DCDCDC"
                           Grid.Column="0"
                           Grid.Row="2"
                           Height="25"
                           Padding="5"/>
                <PasswordBox x:Name="RepeatPassBox"
                             Grid.Column="1"
                             Grid.Row="2"
                             Height="25"
                             Margin="5"
                             PreviewMouseDown="PassB_PreviewMouseDown"
                             Style="{StaticResource NewRoundedPasswordBoxStyle}"/>
                <Button x:Name="ConfirmChange"
                        Content="Подтвердить"
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        Margin="10" Click="ConfirmChange_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="#DCDCDC"/>
                            <Setter Property="Background" Value="#211F22"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5"
                                                Effect="{StaticResource DropShadowEffect}">
                                            <ContentPresenter x:Name="ContentPresenter"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"
                                                              ContentSource="Content"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2E2C30"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#1A181B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
