<Window x:Class="BusNetworkSystem.Pages.PersonalCabinet.PasswordChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusNetworkSystem.Pages.PersonalCabinet"
        mc:Ignorable="d"
        Title="Замена пароля"
        Padding="10" 
        Height="300" 
        Width="400"
        Background="#211F22">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Замена пароля"
                       FontSize="25"
                       Grid.Row="0"
                       Margin="10, 10, 0, 0"
                       Foreground="#DCDCDC"
                       Style="{StaticResource HeaderText}"/>
        <Border Margin="10" 
                Grid.Row="1"
                CornerRadius="10"
                Background="#211F22"
                Effect="{StaticResource DropShadowEffect}">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Старый пароль"
                           Foreground="#DCDCDC"
                           Grid.Column="0"
                           Grid.Row="0"
                           Height="25"
                           Padding="5"/>
                <PasswordBox Grid.Column="1"
                             Grid.Row="0"
                             Height="20"
                             Foreground="#DCDCDC"
                             Style="{StaticResource RoundedPasswordBoxStyle}"/>
                <TextBlock Text="Новый пароль"
                           Foreground="#DCDCDC"
                           Grid.Column="0"
                           Grid.Row="1"
                           Height="25"
                           Padding="5"/>
                <PasswordBox Grid.Column="1"
                             Grid.Row="1"
                             Height="20"
                             Foreground="#DCDCDC"
                             Style="{StaticResource RoundedPasswordBoxStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
