<Page x:Class="BusNetworkSystem.Pages.Buses.BusesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BusNetworkSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1200"
      Title="BusesPage"
      Background="#211F22"
      KeyDown="Page_KeyDown">

    <Page.Resources>
        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter x:Name="ContentPresenter"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Content"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Изменение цвета текста при наведении -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#D74106"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопок переключения изображений -->
        <Style x:Key="BusesImageSwapStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter x:Name="ContentPresenter"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Content"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Изменение цвета текста при наведении -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#D74106"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Для кнопки "Назад" -->
            <RowDefinition Height="*"/>
            <!-- Для основного контента -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Rectangle Fill="#211F22"/>
        <Button Content="←" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                BorderThickness="0"
                Click="BackButton_Click" 
                Margin="15" 
                Background="Transparent" 
                Foreground="#DCDCDC"
                Style="{StaticResource MenuButton}"/>
        <TextBlock Text="Автобусный парк"
                   Foreground="#DCDCDC"
                   Margin="50, 0, 0, 0"
                   FontSize="25"
                   VerticalAlignment="Center"
                   Style="{StaticResource HeaderText}"/>

        <!-- Основной контент -->
        <Grid Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Для кнопки "<" -->
                <ColumnDefinition Width="*"/>
                <!-- Для изображения и текста -->
                <ColumnDefinition Width="Auto"/>
                <!-- Для кнопки ">" -->
                <ColumnDefinition Width="Auto"/>
                <!-- Для описания автобуса -->
            </Grid.ColumnDefinitions>

            <!-- Кнопка "Предыдущее изображение" -->
            <Button x:Name="PreviousImage" 
                    Content="&lt;" 
                    Width="50" 
                    Click="PreviousButton_Click" 
                    Grid.Column="0" 
                    Style="{StaticResource BusesImageSwapStyle}"/>

            <!-- Изображение автобуса -->
            <Border x:Name="ImageBorder" 
                    Grid.Column="1"
                    Width="720" 
                    Height="480" 
                    Margin="2, 0.5, 2, 10" 
                    BorderBrush="#D74106" 
                    BorderThickness="1"
                    CornerRadius="5">
                <Image x:Name="BusImage" 
                       Stretch="UniformToFill" 
                       Opacity="0"/>
            </Border>

            <!-- Кнопка "Следующее изображение" -->
            <Button x:Name="NextImage" 
                    Content="&gt;" 
                    Width="50" 
                    Click="NextButton_Click" 
                    Grid.Column="2" 
                    Style="{StaticResource BusesImageSwapStyle}"/>

            <!-- Описание автобуса -->
            <StackPanel Grid.Column="3" Orientation="Vertical" Margin="10,0,0,0">
                <TextBlock x:Name="LicencePlate" 
                           Text="Номерной знак: " 
                           Foreground="#DCDCDC"
                           FontSize="18"
                           Padding="5"
                           Opacity="0"/>
                <TextBlock x:Name="Model" 
                           Text="Модель: " 
                           Foreground="#DCDCDC"
                           FontSize="18"
                           Padding="5"
                           Opacity="0"/>
                <TextBlock x:Name="Capacity" 
                           Text="Вместимость: " 
                           Foreground="#DCDCDC"
                           FontSize="18"
                           Padding="5"
                           Opacity="0"/>
                <TextBlock x:Name="YearOfManufacture" 
                           Text="Год выпуска: " 
                           Foreground="#DCDCDC"
                           FontSize="18"
                           Padding="5"
                           Opacity="0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
