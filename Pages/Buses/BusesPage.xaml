<Page x:Class="BusNetworkSystem.Pages.Buses.BusesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BusNetworkSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="BusesPage"
      Background="#211F22"
      KeyDown="Page_KeyDown">

    <Page.Resources>
        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter x:Name="ContentPresenter"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Content"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Изменение цвета текста при наведении -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#D74106"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопок переключения изображений -->
        <Style x:Key="BusesImageSwapStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter x:Name="ContentPresenter"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Content"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Изменение цвета текста при наведении -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#D74106"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Для кнопки "Назад" -->
            <RowDefinition Height="*"/>
            <!-- Для основного контента -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Rectangle Fill="#211F22"/>
        <Button Content="←" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                BorderThickness="0"
                Click="BackButton_Click" 
                Margin="15" 
                Background="Transparent" 
                Foreground="#DCDCDC"
                Style="{StaticResource MenuButton}"/>

        <!-- Основной контент -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Для кнопки "<" -->
                <ColumnDefinition Width="*"/>
                <!-- Для изображения и текста -->
                <ColumnDefinition Width="Auto"/>
                <!-- Для кнопки ">" -->
            </Grid.ColumnDefinitions>

            <!-- Кнопка "Предыдущее изображение" -->
            <Button x:Name="PreviousImage" 
                    Content="&lt;" 
                    Width="50" 
                    Click="PreviousButton_Click" 
                    Grid.Column="0" 
                    Style="{StaticResource BusesImageSwapStyle}"/>

            <!-- Изображение и описание автобуса -->
            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                <Border x:Name="ImageBorder" 
                        Width="720" 
                        Height="480" 
                        Margin="2, 0.5, 2, 10" 
                        BorderBrush="#D74106" 
                        BorderThickness="1"
                        CornerRadius="10">
                    <Image x:Name="BusImage" 
                           Stretch="UniformToFill" 
                           Opacity="0"/>
                </Border>

                <!-- Описание автобуса -->
                <StackPanel Orientation="Vertical" Margin="10,5,10,0">
                    <TextBlock x:Name="BusInfo" 
                               TextAlignment="Left" 
                               Opacity="0"
                               Foreground="#DCDCDC"
                               FontSize="18"/>
                    <TextBlock x:Name="BusDescription" 
                               TextAlignment="Left" 
                               Opacity="0"
                               Foreground="#DCDCDC"
                               FontSize="14"
                               FontStyle="Italic"/>
                </StackPanel>
            </StackPanel>

            <!-- Кнопка "Следующее изображение" -->
            <Button x:Name="NextImage" 
                    Content="&gt;" 
                    Width="50" 
                    Click="NextButton_Click" 
                    Grid.Column="2" 
                    Style="{StaticResource BusesImageSwapStyle}"/>
        </Grid>
    </Grid>
</Page>
